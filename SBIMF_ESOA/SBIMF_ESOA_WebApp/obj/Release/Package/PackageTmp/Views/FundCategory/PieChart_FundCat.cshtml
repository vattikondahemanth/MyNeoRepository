
@{
    ViewBag.Title = "Investment Summary";
}


<link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
<link href="~/Content/themes/base/toast.style.css" rel="stylesheet" />
<link href="~/Content/themes/base/toast.style.min.css" rel="stylesheet" />
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi?autoload=
{'modules':[{'name':'visualization','version':'1.1','packages':
['corechart']}]}"></script>
  
@section Scripts {  
    @Scripts.Render("~/bundles/jqueryui")  
    @Styles.Render("~/Content/cssjqryUi")      
    <script type="text/javascript" src="~/Scripts/JS/Charts/FundCategoryChart.js"></script>
} 

<br /><br />
<div style="height:1000px;" id="divChart">     
    <div style="width:25%; float:left;">
        <table>
            <tr>
                <td><label>Folio:</label></td>  
                <td>
                    @Html.DropDownList("drpFolio",
               new List<SelectListItem>
                {
                    new SelectListItem{ Text="13627577", Value = "13627577", Selected= true }
                 })
                </td>
            </tr>
            <tr>
                <td><label>From Date:</label></td>
                <td><input id="dtFrom" type="datetime" readonly="readonly" /></td>
            </tr>
            <tr>
                <td><label>To Date:</label></td>
                <td><input id="dtTo" type="datetime" readonly="readonly" /></td>
            </tr>
            <tr>
                <td colspan="2"><input id="btnGenChart" type="button" value="Display Chart" /> </td>
            </tr>
        </table>
    </div>
    <div  style="width:70%; float:right;  border:solid;">
        <br/><br/>
        <h5>Customer Name:<label id="lblCustName"></label><br /><br /></h5>
        <div id="funChart" style="width: 900px; height: 500px;"></div>
        <br />
        <br />
        <div id="divSchChart" style="display:none;">
            Fund Category: <label id="lblFundCat"></label>
            <div id="schChart" style="width: 900px; height: 500px;"></div>
        </div>
    </div>
</div>
