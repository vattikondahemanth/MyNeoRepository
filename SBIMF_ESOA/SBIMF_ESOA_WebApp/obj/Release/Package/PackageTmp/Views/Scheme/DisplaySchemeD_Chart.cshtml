
@{
    ViewBag.Title = "Investment Summary";
}

<link href="~/Content/themes/base/datatables.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/responsive.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript">
            var key = @System.Convert.ToString(Session["Pass_Enc_Key"]).Trim()
    
</script>

<section class="content-area">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3 content-area-left mb-4">
                <div class="card text-center box-shadow">
                    <div class="welcome">Welcome</div>
                    <div class="card-body">
                        <h5 class="card-title">@Session["UserName"].ToString()</h5>
                        <span class="separator"></span>
                        <span class="folio-number">PAN No: @Session["PAN_No"].ToString()</span>
                        <span class="folio-number">Folio No: 13627577</span>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-lg-9 content-area-right">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-shadow invest-summary-chart-details-area p-4 text-center text-md-left">
                            <h5>Overall Investment Summary</h5>
                            <div class="invest-summary-chart-details">
                                <div class="row align-items-center">
                                    <div class="col-12">
                                        <ul>
                                            <li>Gain/Loss <span id="spanOGL" style="color:@Session["colorCode"].ToString()"><label id="lblOGL">@Session["Gain_Loss"].ToString()</label>%</span></li>
                                            <li>Portfolio Value <span><i class="rupees-icon">&#x20b9;</i><label id="lblOCurr">@Session["Tot_Portfolio_Val"].ToString()</label></span></li>
                                            <li>Investment Value <span><i class="rupees-icon">&#x20b9;</i><label id="lblOAmt">@Session["Tot_Inv_Amt"].ToString()</label></span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="select-statement-period box-shadow mt-4">
                    <div class="calender-area">
                        <div class="select-cal">
                            Your Statement Period
                        </div>
                        <div class="form-group row disabled-cal">
                            <label for="staticEmail" class="col-6 col-sm-1 col-form-label pr-0">From</label>
                            <div class="col-6 col-sm-2 pl-0 cal-separator">
                                <input id="lblFrom" type="text" value="@Session["dtFrom"].ToString()" readonly="readonly" class="form-control" />
                            </div>
                            <label for="staticEmail" class="col-6 col-md-1 col-form-label text-md-right">To</label>
                            <div class="col-6 col-sm-3 pl-0">
                                <input id="lblTo" type="text" value="@Session["dtTo"].ToString()" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4" id="dvTransactions">
                    <div class="col-md-12">
                        <div class="box-shadow static-chart-area p-4">

                            @*<h5>Investments in @Model.Item1.Name Schemes @Html.ActionLink("Back", "SchemeChart", "Scheme", null, new { @class = "btn btn-primary float-right" })</h5>*@

                            <div class="link-area">
                                <a href="@Url.Action("SchemeChart", "Scheme")" class="links">
                                    <img src="@Url.Content("~/Content/images/back_btn_icon.png")">
                                </a>
                                @*<a href="@Url.Action("Invest_summary", "FundCategory")">Category</a>
                                    <a href="@Url.Action("SchemeChart", "Scheme")">Scheme</a>*@
                            </div>

                            <div class="table-area">
                                <table width="100%" class="scheme-table">
                                    <tbody>
                                        <tr>
                                            <td><span>Scheme Name:</span><label id="sp_schName"></label></td>
                                            <td><span>% of total Equity Investment:</span> @ViewBag.Sch_Percentage %</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" class="internal-table-td">
                                                <table width="100%">
                                                    <tbody>
                                                        <tr>
                                                            <td class="grey-bg"><span>Amount Invested:</span> &#x20b9;<label id="sp_schCostValue"></label> <br /><span>Current Value:</span> &#x20b9;<label id="sp_schCurrValue"></label></td>
                                                            <td class="grey-bg">
                                                                <span><span id="sp_schGL"></span>:</span> <label class="GL_Col"><label id="sp_schGLVal"></label>%</label>

                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table><br />

                                @*<table id="tblTrans" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0"></table>*@
                                <div class="mt-3">
                                    <table id="tblTrans" class="table display"></table>
                                </div>
                            </div>

                            <br />
                            @*<div class="row">
                                    <div class="col-sm-12">
                                        <table id="tblTrans" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0"></table>
                                    </div>
                                </div>*@




                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div id="SiteLoader" class="overlay-loader">
            <div class="loader"></div>
        </div>

    </div>
</section>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <script src="~/Scripts/aes.js"></script>
    <script src="~/Scripts/JS/Common.js"></script>
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Scripts/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="~/Scripts/JS/Charts/TransactionDetails.js"></script>
}


